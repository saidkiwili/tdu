# Environment variables for TAE App

# Database
CONNECTION_STRING=Host=localhost;Port=5433;Database=tae_app;Username=postgres;Password=your_password_here;SslMode=Prefer

# SMTP Configuration
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_USE_SSL=true
SMTP_FROM_ADDRESS=noreply@tae.ae

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_TYPES=image/jpeg,image/png,application/pdf

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
BASE_URL=http://localhost:5000
