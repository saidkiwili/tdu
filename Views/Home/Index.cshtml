                    <div class="bg-white bg-opacity-10 rounded-2xl p-6 mb-8">
                        <h3 class="text-white font-semibold text-lg mb-4">Service Packages</h3>

                        <!-- New Applications -->
                        <div class="mb-6">
                            <h4 class="text-white font-medium mb-3">New Applications</h4>
