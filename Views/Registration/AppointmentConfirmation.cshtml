@model Appointment

@{
    ViewData["Title"] = "Appointment Confirmation";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h3>Appointment Confirmed!</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-success">
                    <h4>Payment Successful!</h4>
                    <p>Your NIDA service appointment has been scheduled.</p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h5>Member Details:</h5>
                        <p><strong>Name:</strong> @Model.Member.FullName</p>
                        <p><strong>Member ID:</strong> @Model.Member.MemberId</p>
                        <p><strong>Email:</strong> @Model.Member.EmailAddress</p>
                        <p><strong>Phone:</strong> @Model.Member.PhoneNumber</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Appointment Details:</h5>
                        <p><strong>Service:</strong> @Model.ServiceType</p>
                        <p><strong>Date:</strong> @Model.ScheduledAt.ToString("dddd, MMMM dd, yyyy")</p>
                        <p><strong>Time:</strong> @Model.ScheduledAt.ToString("HH:mm")</p>
                        <p><strong>Location:</strong> @Model.Location</p>
                    </div>
                </div>

                <div class="alert alert-info">
                    <h5>Payment Information:</h5>
                    <p><strong>Payment Reference:</strong> @Model.Member.PaymentReference</p>
                    <p><strong>Amount Paid:</strong> AED @Model.Member.AmountPaid</p>
                    <p><strong>Payment Method:</strong> @Model.Member.PaymentMethod</p>
                </div>

                <div class="alert alert-warning">
                    <h5>Important Notes:</h5>
                    <ul>
                        <li>Please arrive 15 minutes before your appointment time</li>
                        <li>Bring your passport, Emirates ID (if available), and any relevant documents</li>
                        <li>A confirmation email will be sent to your registered email address</li>
                        <li>For any changes or cancellations, contact us at least 24 hours in advance</li>
                    </ul>
                </div>

                <div class="d-grid gap-2">
                    <button onclick="window.print()" class="btn btn-outline-primary">Print Confirmation</button>
                    <a href="/" class="btn btn-primary">Go to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
