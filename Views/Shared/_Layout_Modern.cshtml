<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TAE</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        /* Modern CSS Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
            color: #1f2937;
            background: #ffffff;
            overflow-x: hidden;
        }
        
        /* Simple, clean animations */
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        @@keyframes slideDown {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .fade-in {
            animation: fadeIn 0.6s ease-out;
        }
        
        .slide-down {
            animation: slideDown 0.3s ease-out;
        }
        
        /* Clean Navigation */
        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid #e5e7eb;
            position: sticky;
            top: 0;
            z-index: 50;
            transition: all 0.2s ease;
        }
        
        .navbar.scrolled {
            box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
        }
        
        .nav-logo {
            height: 32px;
            width: auto;
        }
        
        .nav-link {
            color: #374151;
            text-decoration: none;
            font-weight: 500;
            padding: 8px 16px;
            border-radius: 6px;
            transition: all 0.2s ease;
        }
        
        .nav-link:hover {
            color: #00B04F;
            background-color: #f3f4f6;
            text-decoration: none;
        }
        
        /* Dropdown */
        .dropdown {
            position: relative;
        }
        
        .dropdown-menu {
            position: absolute;
            top: 100%;
            left: 0;
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
            min-width: 240px;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.2s ease;
            z-index: 50;
        }
        
        .dropdown:hover .dropdown-menu {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }
        
        .dropdown-item {
            display: block;
            padding: 12px 16px;
            color: #374151;
            text-decoration: none;
            transition: all 0.2s ease;
        }
        
        .dropdown-item:hover {
            background-color: #f3f4f6;
            color: #00B04F;
            text-decoration: none;
        }
        
        /* Buttons */
        .btn {
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            transition: all 0.2s ease;
            border: none;
            cursor: pointer;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #00B04F 0%, #0F4A6C 100%);
            color: white;
        }
        
        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(0, 176, 79, 0.3);
            color: white;
            text-decoration: none;
        }
        
        .btn-secondary {
            background: white;
            color: #0F4A6C;
            border: 2px solid #0F4A6C;
        }
        
        .btn-secondary:hover {
            background: #0F4A6C;
            color: white;
            text-decoration: none;
        }
        
        /* Mobile Menu */
        .mobile-menu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }
        
        .mobile-menu.active {
            max-height: 500px;
        }
        
        .mobile-toggle {
            display: none;
            background: none;
            border: none;
            color: #374151;
            font-size: 1.5rem;
            cursor: pointer;
        }
        
        /* Responsive Design */
        .desktop-nav {
            display: flex;
        }
        
        .mobile-toggle {
            display: none;
        }
        
        @@media (max-width: 768px) {
            .desktop-nav {
                display: none;
            }
            
            .mobile-toggle {
                display: block;
            }
        }
        
        @@media (min-width: 769px) {
            .mobile-menu {
                display: none !important;
            }
        }
        
        /* Main content spacing */
        main {
            min-height: calc(100vh - 200px);
        }
        
        /* Footer */
        .footer {
            background-color: #111827;
            color: white;
        }
        
        .footer a {
            color: #d1d5db;
            text-decoration: none;
            transition: color 0.2s ease;
        }
        
        .footer a:hover {
            color: #00B04F;
            text-decoration: none;
        }
        
        .footer-logo {
            height: 28px;
            width: auto;
        }
        
        .social-icon {
            width: 36px;
            height: 36px;
            border-radius: 6px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            transition: all 0.2s ease;
            font-size: 14px;
        }
        
        .social-icon:hover {
            transform: translateY(-2px);
            text-decoration: none;
        }
        
        /* Utility classes */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        .flex {
            display: flex;
        }
        
        .items-center {
            align-items: center;
        }
        
        .justify-between {
            justify-content: between;
        }
        
        .space-x-4 > * + * {
            margin-left: 16px;
        }
        
        .space-x-6 > * + * {
            margin-left: 24px;
        }
        
        .space-y-2 > * + * {
            margin-top: 8px;
        }
        
        .space-y-4 > * + * {
            margin-top: 16px;
        }
        
        .text-center {
            text-align: center;
        }
        
        .font-bold {
            font-weight: 700;
        }
        
        .font-semibold {
            font-weight: 600;
        }
        
        .text-lg {
            font-size: 1.125rem;
        }
        
        .text-xl {
            font-size: 1.25rem;
        }
        
        .text-sm {
            font-size: 0.875rem;
        }
        
        .mb-4 {
            margin-bottom: 16px;
        }
        
        .mb-6 {
            margin-bottom: 24px;
        }
        
        .mb-8 {
            margin-bottom: 32px;
        }
        
        .py-4 {
            padding-top: 16px;
            padding-bottom: 16px;
        }
        
        .py-8 {
            padding-top: 32px;
            padding-bottom: 32px;
        }
        
        .py-12 {
            padding-top: 48px;
            padding-bottom: 48px;
        }
        
        .px-4 {
            padding-left: 16px;
            padding-right: 16px;
        }
        
        .grid {
            display: grid;
        }
        
        .grid-cols-1 {
            grid-template-columns: repeat(1, 1fr);
        }
        
        .grid-cols-3 {
            grid-template-columns: repeat(3, 1fr);
        }
        
        .gap-8 {
            gap: 32px;
        }
        
        @@media (min-width: 768px) {
            .md\\:grid-cols-3 {
                grid-template-columns: repeat(3, 1fr);
            }
            
            .md\\:flex {
                display: flex;
            }
        }
    </style>
</head>
<body>
    <!-- Clean Navigation -->
    <nav class="navbar">
        <div class="container">
            <div class="flex items-center justify-between" style="height: 64px;">
                <!-- Logo -->
                <div class="flex items-center">
                    <img src="~/img/logo.png" alt="TAE Logo" class="nav-logo" />
                </div>
                
                <!-- Desktop Navigation -->
                <div class="desktop-nav flex items-center space-x-6">
                    <a href="/" class="nav-link">Home</a>
                    <a href="/About" class="nav-link">About</a>
                    
                    <!-- Services Dropdown -->
                    <div class="dropdown">
                        <button class="nav-link flex items-center">
                            Services <i class="fas fa-chevron-down ml-2 text-sm"></i>
                        </button>
                        <div class="dropdown-menu">
                            <a href="/Services/NIDA" class="dropdown-item">
                                <i class="fas fa-id-card mr-3 text-green-600"></i>
                                <div>
                                    <div class="font-semibold">NIDA Services</div>
                                    <div class="text-sm text-gray-500">Identity verification</div>
                                </div>
                            </a>
                            <a href="/Services/Community" class="dropdown-item">
                                <i class="fas fa-users mr-3 text-blue-600"></i>
                                <div>
                                    <div class="font-semibold">Community</div>
                                    <div class="text-sm text-gray-500">Events & networking</div>
                                </div>
                            </a>
                            <a href="/Services/Business" class="dropdown-item">
                                <i class="fas fa-briefcase mr-3 text-red-600"></i>
                                <div>
                                    <div class="font-semibold">Business</div>
                                    <div class="text-sm text-gray-500">Professional network</div>
                                </div>
                            </a>
                        </div>
                    </div>
                    
                    <a href="/Events" class="nav-link">Events</a>
                    <a href="/Contact" class="nav-link">Contact</a>
                    
                    <!-- Auth Buttons -->
                    <div class="flex items-center space-x-4">
                        <a href="/Account/Login" class="nav-link">Login</a>
                        <a href="/Account/Register" class="btn btn-primary">Join Us</a>
                    </div>
                </div>
                
                <!-- Mobile menu button -->
                <button class="mobile-toggle" id="mobile-menu-btn">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
            
            <!-- Mobile Navigation -->
            <div id="mobile-menu" class="mobile-menu">
                <div class="py-4 space-y-2" style="border-top: 1px solid #e5e7eb;">
                    <a href="/" class="nav-link block">Home</a>
                    <a href="/About" class="nav-link block">About</a>
                    
                    <div class="px-4 py-2">
                        <div class="font-semibold mb-2">Services</div>
                        <div class="space-y-2" style="padding-left: 16px;">
                            <a href="/Services/NIDA" class="nav-link block">
                                <i class="fas fa-id-card mr-2"></i>NIDA Services
                            </a>
                            <a href="/Services/Community" class="nav-link block">
                                <i class="fas fa-users mr-2"></i>Community
                            </a>
                            <a href="/Services/Business" class="nav-link block">
                                <i class="fas fa-briefcase mr-2"></i>Business
                            </a>
                        </div>
                    </div>
                    
                    <a href="/Events" class="nav-link block">Events</a>
                    <a href="/Contact" class="nav-link block">Contact</a>
                    
                    <div class="px-4 py-4 space-y-2" style="border-top: 1px solid #e5e7eb;">
                        <a href="/Account/Login" class="nav-link block text-center">Login</a>
                        <a href="/Account/Register" class="btn btn-primary block text-center">Join Us</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    
    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>
    
    <!-- Clean Footer -->
    <footer class="footer">
        <div class="container py-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Company Info -->
                <div>
                    <div class="flex items-center mb-4">
                        <img src="~/img/logo.png" alt="TAE Logo" class="footer-logo mr-3" />
                        <div class="text-lg font-bold">TAE</div>
                    </div>
                    <p class="mb-4 text-sm" style="color: #9ca3af; max-width: 280px; line-height: 1.5;">
                        Connecting Tanzanian hearts in the Emirates through community, culture, and opportunity.
                    </p>
                    <div class="flex space-x-3">
                        <a href="#" class="social-icon" style="background-color: #00B04F;">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon" style="background-color: #0F4A6C;">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon" style="background-color: #CE1126;">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div>
                    <h3 class="font-semibold mb-3" style="color: #00B04F; font-size: 16px;">Quick Links</h3>
                    <div class="space-y-1">
                        <a href="/About" class="footer block text-sm py-1">About Us</a>
                        <a href="/Services" class="footer block text-sm py-1">Services</a>
                        <a href="/Events" class="footer block text-sm py-1">Events</a>
                        <a href="/Contact" class="footer block text-sm py-1">Contact</a>
                    </div>
                </div>
                
                <!-- Services -->
                <div>
                    <h3 class="font-semibold mb-3" style="color: #0F4A6C; font-size: 16px;">Services</h3>
                    <div class="space-y-1">
                        <a href="/Services/NIDA" class="footer block text-sm py-1">NIDA Integration</a>
                        <a href="/Services/Community" class="footer block text-sm py-1">Community Events</a>
                        <a href="/Services/Business" class="footer block text-sm py-1">Business Network</a>
                    </div>
                </div>
            </div>
            
            <!-- Bottom Bar -->
            <div class="text-center py-4" style="border-top: 1px solid #374151; margin-top: 32px;">
                <div class="text-xs" style="color: #9ca3af;">
                    © 2025 Tanzanian Association in Emirates. All rights reserved.
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-btn').addEventListener('click', function() {
            const mobileMenu = document.getElementById('mobile-menu');
            const icon = this.querySelector('i');
            
            mobileMenu.classList.toggle('active');
            
            if (mobileMenu.classList.contains('active')) {
                icon.className = 'fas fa-times';
            } else {
                icon.className = 'fas fa-bars';
            }
        });
        
        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 10) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
