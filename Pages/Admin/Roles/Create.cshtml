@page
@model tae_app.Pages.Admin.Roles.CreateModel
@{
    ViewData["Title"] = "Create Role";
    Layout = "_AdminLayout";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Create New Role</h1>
            <p class="text-gray-600">Add a new role with specific permissions</p>
        </div>

        <!-- Error Messages -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Form -->
        <div class="bg-white rounded-lg shadow-sm border p-6">
            <form method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <partial name="_RoleForm" model='new { Name = Model.CreateRole?.Name, SelectedPermissions = Model.CreateRole?.SelectedPermissions ?? new List<string>(), AvailablePermissions = Model.AvailablePermissions, Prefix = "CreateRole" }' />
                <div class="flex justify-end space-x-3 pt-4 border-t">
                    <a href="/Admin/Roles" class="btn-secondary inline-flex items-center">
                        <i class="fas fa-arrow-left mr-2"></i>Back to Roles
                    </a>
                    <button type="submit" class="btn-primary inline-flex items-center">
                        <i class="fas fa-plus mr-2"></i>Create Role
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
