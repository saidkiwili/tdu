@page
@model tae_app.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<section class="max-w-2xl mx-auto py-12 px-4">
    <div class="bg-white rounded-xl shadow-lg p-8">
        <h2 class="text-2xl font-semibold mb-4">Change Password</h2>
        <form method="post">
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Current password</label>
                    <input asp-for="Input.CurrentPassword" type="password" class="mt-1 block w-full border border-gray-200 rounded-lg p-2" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">New password</label>
                    <input asp-for="Input.NewPassword" type="password" class="mt-1 block w-full border border-gray-200 rounded-lg p-2" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Confirm new password</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="mt-1 block w-full border border-gray-200 rounded-lg p-2" />
                </div>
            </div>

            <div class="mt-6">
                <button type="submit" class="px-4 py-2 bg-tanzanian-green text-white rounded-lg">Change password</button>
                <a asp-page="/Account/Profile" class="ml-3 text-gray-600">Cancel</a>
            </div>
        </form>
    </div>
</section>
