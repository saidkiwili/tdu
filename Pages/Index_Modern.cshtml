@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section - Clean and Modern -->
<section class="hero-section" style="background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); padding: 80px 0;">
    <div class="container">
        <div class="hero-content text-center fade-in">
            <h1 class="hero-title" style="font-size: 3.5rem; font-weight: 700; color: #1f2937; margin-bottom: 24px; line-height: 1.2;">
                Welcome to <span style="color: #00B04F;">TAE</span>
            </h1>
            <p class="hero-subtitle" style="font-size: 1.25rem; color: #6b7280; margin-bottom: 40px; max-width: 600px; margin-left: auto; margin-right: auto;">
                Connecting the Tanzanian community in the United Arab Emirates through culture, opportunity, and shared values.
            </p>
            <div class="hero-buttons flex items-center justify-center space-x-4">
                <a href="/Account/Register" class="btn btn-primary" style="padding: 14px 32px; font-size: 1.1rem;">
                    <i class="fas fa-users mr-2"></i>
                    Join Our Community
                </a>
                <a href="/Services/NIDA" class="btn btn-secondary" style="padding: 14px 32px; font-size: 1.1rem;">
                    <i class="fas fa-id-card mr-2"></i>
                    NIDA Services
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-12" style="background: white;">
    <div class="container">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold mb-4" style="color: #1f2937;">Why Choose TAE?</h2>
            <p class="text-lg" style="color: #6b7280; max-width: 600px; margin: 0 auto;">
                We're more than just an association - we're a bridge between cultures and a gateway to opportunities.
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div class="feature-card text-center fade-in" style="padding: 32px; background: white; border-radius: 12px; box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1); transition: all 0.2s ease;">
                <div class="feature-icon" style="width: 64px; height: 64px; background: linear-gradient(135deg, #00B04F, #0F4A6C); border-radius: 16px; display: flex; align-items: center; justify-content: center; margin: 0 auto 24px auto;">
                    <i class="fas fa-id-card text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold mb-4" style="color: #1f2937;">NIDA Integration</h3>
                <p style="color: #6b7280; line-height: 1.6;">
                    Seamless identity verification services connecting you to essential government services back home.
                </p>
            </div>
            
            <!-- Feature 2 -->
            <div class="feature-card text-center fade-in" style="padding: 32px; background: white; border-radius: 12px; box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1); transition: all 0.2s ease; animation-delay: 0.2s;">
                <div class="feature-icon" style="width: 64px; height: 64px; background: linear-gradient(135deg, #0F4A6C, #CE1126); border-radius: 16px; display: flex; align-items: center; justify-content: center; margin: 0 auto 24px auto;">
                    <i class="fas fa-users text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold mb-4" style="color: #1f2937;">Community Events</h3>
                <p style="color: #6b7280; line-height: 1.6;">
                    Regular cultural events, networking opportunities, and celebrations that bring our community together.
                </p>
            </div>
            
            <!-- Feature 3 -->
            <div class="feature-card text-center fade-in" style="padding: 32px; background: white; border-radius: 12px; box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1); transition: all 0.2s ease; animation-delay: 0.4s;">
                <div class="feature-icon" style="width: 64px; height: 64px; background: linear-gradient(135deg, #CE1126, #00B04F); border-radius: 16px; display: flex; align-items: center; justify-content: center; margin: 0 auto 24px auto;">
                    <i class="fas fa-briefcase text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold mb-4" style="color: #1f2937;">Business Network</h3>
                <p style="color: #6b7280; line-height: 1.6;">
                    Connect with fellow entrepreneurs and professionals to grow your business and career opportunities.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="stats-section py-12" style="background: #f8fafc;">
    <div class="container">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
            <div class="stat-card fade-in">
                <div class="stat-number" style="font-size: 3rem; font-weight: 700; color: #00B04F; margin-bottom: 8px;">500+</div>
                <div class="stat-label" style="color: #6b7280; font-weight: 600;">Active Members</div>
            </div>
            <div class="stat-card fade-in" style="animation-delay: 0.2s;">
                <div class="stat-number" style="font-size: 3rem; font-weight: 700; color: #0F4A6C; margin-bottom: 8px;">50+</div>
                <div class="stat-label" style="color: #6b7280; font-weight: 600;">Events Hosted</div>
            </div>
            <div class="stat-card fade-in" style="animation-delay: 0.4s;">
                <div class="stat-number" style="font-size: 3rem; font-weight: 700; color: #CE1126; margin-bottom: 8px;">1000+</div>
                <div class="stat-label" style="color: #6b7280; font-weight: 600;">NIDA Verifications</div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section py-12" style="background: linear-gradient(135deg, #00B04F 0%, #0F4A6C 100%);">
    <div class="container text-center">
        <div class="cta-content fade-in" style="color: white;">
            <h2 class="text-3xl font-bold mb-4">Ready to Join Our Community?</h2>
            <p class="text-lg mb-8" style="max-width: 600px; margin: 0 auto 32px auto; opacity: 0.9;">
                Become part of a thriving Tanzanian community in the UAE. Access exclusive events, networking opportunities, and essential services.
            </p>
            <div class="cta-buttons flex items-center justify-center space-x-4">
                <a href="/Account/Register" class="btn" style="background: white; color: #00B04F; padding: 14px 32px; font-size: 1.1rem; font-weight: 600;">
                    <i class="fas fa-user-plus mr-2"></i>
                    Register Now
                </a>
                <a href="/Contact" class="btn" style="background: transparent; color: white; border: 2px solid white; padding: 12px 32px; font-size: 1.1rem; font-weight: 600;">
                    <i class="fas fa-phone mr-2"></i>
                    Contact Us
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        position: relative;
        overflow: hidden;
    }
    
    .feature-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    }
    
    .stat-card {
        padding: 24px;
    }
    
    .cta-section {
        position: relative;
    }
    
    .cta-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.1);
        pointer-events: none;
    }
    
    .cta-content {
        position: relative;
        z-index: 2;
    }
    
    /* Mobile responsive adjustments */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem !important;
        }
        
        .hero-buttons {
            flex-direction: column;
            gap: 16px;
        }
        
        .hero-buttons .btn {
            width: 100%;
            max-width: 280px;
            justify-content: center;
        }
        
        .cta-buttons {
            flex-direction: column;
            gap: 16px;
        }
        
        .cta-buttons .btn {
            width: 100%;
            max-width: 280px;
            justify-content: center;
        }
    }
</style>
