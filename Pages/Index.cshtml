@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section - Clean and Modern -->
<section class="bg-gradient-to-br from-gray-50 to-gray-100 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight">
                Welcome to <span class="text-tanzanian-green">TDUAE</span>
            </h1>
            <p class="text-xl text-gray-600 mb-10 max-w-3xl mx-auto leading-relaxed">
                Connecting Tanzanians in UAE with culture, services, and opportunities.
            </p>
            <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6">
                <a href="/Home/EventsActivities" class="bg-tanzanian-green hover:bg-tanzanian-blue text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors duration-300 transform hover:scale-105 shadow-lg">
                    <i class="fas fa-calendar-alt mr-2"></i>
                    Events
                </a>
                <a href="/Home/BusinessOpportunities" class="bg-tanzanian-blue hover:bg-tanzanian-green text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors duration-300 transform hover:scale-105 shadow-lg">
                    <i class="fas fa-briefcase mr-2"></i>
                    Business & Investment
                </a>
                <a href="/Home/CommunityServices" class="bg-uae-red hover:bg-tanzanian-green text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors duration-300 transform hover:scale-105 shadow-lg">
                    <i class="fas fa-hands-helping mr-2"></i>
                    Services
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Why Choose TDUAE?</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
                We're more than just an association - we're your bridge between Tanzanian culture and UAE opportunities.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 text-center">
                <div class="w-16 h-16 bg-gradient-to-br from-tanzanian-green to-tanzanian-blue rounded-2xl flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-users text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-4">Community Connection</h3>
                <p class="text-gray-600 leading-relaxed">
                    Building strong networks among Tanzanians in the UAE through cultural events, business partnerships, and social gatherings.
                </p>
            </div>

            <!-- Feature 2 -->
            <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 text-center">
                <div class="w-16 h-16 bg-gradient-to-br from-tanzanian-blue to-uae-red rounded-2xl flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-briefcase text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-4">Business Opportunities</h3>
                <p class="text-gray-600 leading-relaxed">
                    Access to investment opportunities, diaspora bonds, business directory, and trade partnerships between Tanzania and UAE.
                </p>
            </div>

            <!-- Feature 3 -->
            <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 text-center">
                <div class="w-16 h-16 bg-gradient-to-br from-uae-red to-tanzanian-green rounded-2xl flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-hands-helping text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-4">Essential Services</h3>
                <p class="text-gray-600 leading-relaxed">
                    Comprehensive support including NIDA services, banking assistance, immigration guidance, and community welfare programs.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
            <div class="transform transition-transform duration-300 hover:scale-105">
                <div class="text-5xl font-bold text-tanzanian-green mb-2">5000+</div>
                <div class="text-gray-600 font-semibold text-lg">Active Members</div>
            </div>
            <div class="transform transition-transform duration-300 hover:scale-105">
                <div class="text-5xl font-bold text-tanzanian-blue mb-2">100+</div>
                <div class="text-gray-600 font-semibold text-lg">Events Hosted</div>
            </div>
            <div class="transform transition-transform duration-300 hover:scale-105">
                <div class="text-5xl font-bold text-uae-red mb-2">25+</div>
                <div class="text-gray-600 font-semibold text-lg">Cities Covered</div>
            </div>
        </div>
    </div>
</section>

<!-- Leadership Highlight Section -->
<section class="bg-gradient-to-r from-tanzanian-green to-tanzanian-blue py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center text-white">
            <h2 class="text-3xl font-bold mb-6">Upcoming Leadership Visit</h2>
            <p class="text-xl mb-8 max-w-3xl mx-auto opacity-90">
                Join us for an exclusive meeting with Tanzanian government officials and business leaders. Don't miss this opportunity to connect with key decision-makers and learn about new initiatives for our diaspora community.
            </p>
            <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6">
                <a href="/Home/EventsActivities" class="bg-white text-tanzanian-green hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
                    <i class="fas fa-calendar-check mr-2"></i>
                    View Events
                </a>
                <a href="/Home/Membership" class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-tanzanian-green px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105">
                    <i class="fas fa-user-plus mr-2"></i>
                    Join Now
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="bg-gradient-to-br from-tanzanian-green to-tanzanian-blue py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="text-white">
            <h2 class="text-4xl font-bold mb-6">Ready to Join Our Community?</h2>
            <p class="text-xl mb-8 max-w-3xl mx-auto opacity-90 leading-relaxed">
                Become part of a thriving Tanzanian community in the UAE. Access exclusive events, networking opportunities, and essential services tailored for our diaspora.
            </p>
            <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6">
                <a href="/Account/Register" class="bg-white text-tanzanian-green hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
                    <i class="fas fa-user-plus mr-2"></i>
                    Register Now
                </a>
                <a href="/Contact" class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-tanzanian-green px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105">
                    <i class="fas fa-phone mr-2"></i>
                    Contact Us
                </a>
            </div>
        </div>
    </div>
</section>


