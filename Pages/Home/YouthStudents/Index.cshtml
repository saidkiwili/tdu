@page
@{
    ViewData["Title"] = "Youth & Students - TDUAE";
}

<!-- Hero Section -->
<section class="bg-gradient-to-br from-tanzanian-green via-tanzanian-blue to-uae-red text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">Youth & Students</h1>
        <p class="text-xl md:text-2xl max-w-4xl mx-auto leading-relaxed opacity-90">
            Empowering the next generation of Tanzanian leaders in the UAE
        </p>
    </div>
</section>

<!-- Student Support Services -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-6">
                Student <span class="text-tanzanian-blue">Support Services</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Comprehensive support for Tanzanian students studying and working in the UAE
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Academic Support -->
            <div class="bg-gradient-to-br from-blue-50 to-indigo-50 p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300">
                <div class="text-center mb-6">
                    <div class="w-20 h-20 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-graduation-cap text-white text-3xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Academic Guidance</h3>
                </div>
                <p class="text-gray-600 mb-6 leading-relaxed">
                    Get advice on university applications, scholarship opportunities, and academic planning for Tanzanian students.
                </p>
                <ul class="space-y-2 text-sm text-gray-600">
                    <li>• University application assistance</li>
                    <li>• Scholarship information</li>
                    <li>• Academic counseling</li>
                    <li>• Study abroad guidance</li>
                </ul>
            </div>

            <!-- Career Development -->
            <div class="bg-gradient-to-br from-green-50 to-emerald-50 p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300">
                <div class="text-center mb-6">
                    <div class="w-20 h-20 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-briefcase text-white text-3xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Career Development</h3>
                </div>
                <p class="text-gray-600 mb-6 leading-relaxed">
                    Professional development workshops, internship opportunities, and career counseling for young Tanzanians.
                </p>
                <ul class="space-y-2 text-sm text-gray-600">
                    <li>• CV writing workshops</li>
                    <li>• Interview preparation</li>
                    <li>• Internship placements</li>
                    <li>• Networking events</li>
                </ul>
            </div>

            <!-- Mentorship Program -->
            <div class="bg-gradient-to-br from-purple-50 to-pink-50 p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300">
                <div class="text-center mb-6">
                    <div class="w-20 h-20 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-handshake text-white text-3xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Mentorship Program</h3>
                </div>
                <p class="text-gray-600 mb-6 leading-relaxed">
                    Connect with experienced Tanzanian professionals who can guide your career and personal development journey.
                </p>
                <ul class="space-y-2 text-sm text-gray-600">
                    <li>• One-on-one mentoring</li>
                    <li>• Industry insights</li>
                    <li>• Leadership development</li>
                    <li>• Personal growth guidance</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Scholarships & Opportunities -->
<section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-6">
                Scholarships & <span class="text-tanzanian-green">Opportunities</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Funding opportunities and educational programs for Tanzanian students
            </p>
        </div>

        <div class="grid md:grid-cols-2 gap-12">
            <!-- Available Scholarships -->
            <div class="space-y-6">
                <h3 class="text-2xl font-bold text-gray-900">Available Scholarships</h3>

                <div class="space-y-4">
                    <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-tanzanian-green">
                        <h4 class="font-semibold text-lg text-tanzanian-green mb-2">Tanzanian Government Scholarships</h4>
                        <p class="text-gray-600 mb-3">Full scholarships for undergraduate and postgraduate studies in Tanzania and abroad.</p>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-500">Deadline: March 31, 2025</span>
                            <a href="#" class="text-tanzanian-green hover:text-tanzanian-blue font-medium">Apply Now →</a>
                        </div>
                    </div>

                    <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-tanzanian-blue">
                        <h4 class="font-semibold text-lg text-tanzanian-blue mb-2">UAE University Scholarships</h4>
                        <p class="text-gray-600 mb-3">Partial scholarships for Tanzanian students studying in UAE universities.</p>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-500">Deadline: April 15, 2025</span>
                            <a href="#" class="text-tanzanian-blue hover:text-tanzanian-green font-medium">Apply Now →</a>
                        </div>
                    </div>

                    <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-uae-red">
                        <h4 class="font-semibold text-lg text-uae-red mb-2">Private Sector Scholarships</h4>
                        <p class="text-gray-600 mb-3">Scholarships sponsored by Tanzanian businesses and UAE companies.</p>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-500">Rolling applications</span>
                            <a href="#" class="text-uae-red hover:text-tanzanian-green font-medium">Apply Now →</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Internship Opportunities -->
            <div class="space-y-6">
                <h3 class="text-2xl font-bold text-gray-900">Internship Opportunities</h3>

                <div class="space-y-4">
                    <div class="bg-white p-6 rounded-lg shadow-md">
                        <div class="flex items-start justify-between mb-3">
                            <div>
                                <h4 class="font-semibold text-lg text-gray-900">Technology Internships</h4>
                                <p class="text-gray-600">Software development, IT support, and digital marketing roles</p>
                            </div>
                            <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs font-medium">Available</span>
                        </div>
                        <p class="text-sm text-gray-500 mb-3">Dubai • 3-6 months • AED 2,000/month</p>
                        <a href="#" class="text-tanzanian-green hover:text-tanzanian-blue font-medium">Apply Now →</a>
                    </div>

                    <div class="bg-white p-6 rounded-lg shadow-md">
                        <div class="flex items-start justify-between mb-3">
                            <div>
                                <h4 class="font-semibold text-lg text-gray-900">Business Development</h4>
                                <p class="text-gray-600">Marketing, sales, and business analysis positions</p>
                            </div>
                            <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs font-medium">Limited</span>
                        </div>
                        <p class="text-sm text-gray-500 mb-3">Abu Dhabi • 4-6 months • AED 2,500/month</p>
                        <a href="#" class="text-tanzanian-blue hover:text-tanzanian-green font-medium">Apply Now →</a>
                    </div>

                    <div class="bg-white p-6 rounded-lg shadow-md">
                        <div class="flex items-start justify-between mb-3">
                            <div>
                                <h4 class="font-semibold text-lg text-gray-900">Engineering Programs</h4>
                                <p class="text-gray-600">Civil, mechanical, and electrical engineering internships</p>
                            </div>
                            <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded-full text-xs font-medium">New</span>
                        </div>
                        <p class="text-sm text-gray-500 mb-3">Sharjah • 6 months • AED 3,000/month</p>
                        <a href="#" class="text-uae-red hover:text-tanzanian-green font-medium">Apply Now →</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Youth Achievements -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-6">
                Showcasing <span class="text-tanzanian-green">Youth Achievements</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Celebrating the success stories of Tanzanian youth in the UAE
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            <!-- Achievement 1 -->
            <div class="bg-gradient-to-br from-white to-gray-50 p-6 rounded-xl shadow-lg text-center">
                <div class="w-16 h-16 bg-gradient-to-r from-tanzanian-green to-tanzanian-blue rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-trophy text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Academic Excellence</h3>
                <p class="text-gray-600 mb-4">Tanzanian students achieving top grades in UAE universities and earning prestigious scholarships.</p>
                <div class="text-2xl font-bold text-tanzanian-green">25+ Students</div>
                <div class="text-sm text-gray-500">Dean's List 2024</div>
            </div>

            <!-- Achievement 2 -->
            <div class="bg-gradient-to-br from-white to-gray-50 p-6 rounded-xl shadow-lg text-center">
                <div class="w-16 h-16 bg-gradient-to-r from-tanzanian-blue to-uae-red rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-rocket text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Entrepreneurship</h3>
                <p class="text-gray-600 mb-4">Young Tanzanian entrepreneurs launching successful businesses in the UAE market.</p>
                <div class="text-2xl font-bold text-tanzanian-blue">15+ Startups</div>
                <div class="text-sm text-gray-500">Founded by youth under 30</div>
            </div>

            <!-- Achievement 3 -->
            <div class="bg-gradient-to-br from-white to-gray-50 p-6 rounded-xl shadow-lg text-center">
                <div class="w-16 h-16 bg-gradient-to-r from-uae-red to-tanzanian-green rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-users text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Community Leadership</h3>
                <p class="text-gray-600 mb-4">Youth taking active roles in community leadership and volunteer organizations.</p>
                <div class="text-2xl font-bold text-uae-red">50+ Leaders</div>
                <div class="text-sm text-gray-500">Active in community service</div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-16 bg-gradient-to-br from-tanzanian-blue to-purple-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-6">Join Our Youth Programs</h2>
        <p class="text-xl mb-8 max-w-3xl mx-auto opacity-90">
            Whether you're a student, recent graduate, or young professional, our programs are designed to help you succeed in the UAE.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6">
            <a href="/Account/Register" class="bg-white text-tanzanian-blue hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
                <i class="fas fa-user-plus mr-2"></i>
                Join Youth Network
            </a>
            <a href="/Contact" class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-tanzanian-blue px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105">
                <i class="fas fa-envelope mr-2"></i>
                Get Mentored
            </a>
        </div>
    </div>
</section>
