<!-- FAQ Section -->
<section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-6">
                Frequently Asked <span class="text-tanzanian-green">Questions</span>
            </h2>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            <div class="space-y-6">
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h4 class="font-semibold text-lg text-gray-900 mb-2">Can I upgrade my membership?</h4>
                    <p class="text-gray-600">Yes, you can upgrade your membership at any time. The difference in fees will be prorated.</p>
                </div>

