@page
@{
    ViewData["Title"] = "Media Gallery - TDUAE";
}

<!-- Hero Section -->
<section class="bg-gradient-to-br from-tanzanian-blue via-uae-red to-tanzanian-green text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">Media Gallery</h1>
        <p class="text-xl md:text-2xl max-w-4xl mx-auto leading-relaxed opacity-90">
            Explore our collection of photos, videos, and stories showcasing the vibrant Tanzanian community in the UAE
        </p>
    </div>
</section>

<!-- Gallery Navigation -->
<section class="py-12 bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-wrap justify-center space-x-4 space-y-4 sm:space-y-0">
            <button class="gallery-filter active bg-tanzanian-blue text-white px-6 py-3 rounded-lg font-semibold hover:bg-tanzanian-green transition-all duration-300" data-filter="all">
                All Media
            </button>
            <button class="gallery-filter bg-gray-200 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-tanzanian-blue hover:text-white transition-all duration-300" data-filter="events">
                Events
            </button>
            <button class="gallery-filter bg-gray-200 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-tanzanian-blue hover:text-white transition-all duration-300" data-filter="cultural">
                Cultural
            </button>
            <button class="gallery-filter bg-gray-200 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-tanzanian-blue hover:text-white transition-all duration-300" data-filter="business">
                Business
            </button>
            <button class="gallery-filter bg-gray-200 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-tanzanian-blue hover:text-white transition-all duration-300" data-filter="community">
                Community
            </button>
        </div>
    </div>
</section>

<!-- Featured Gallery -->
<section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
