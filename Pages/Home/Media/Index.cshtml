<!-- Media Upload -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-6">
                Share Your <span class="text-tanzanian-green">Moments</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Help us build our community gallery by sharing your photos and videos
            </p>
        </div>

        <div class="max-w-2xl mx-auto">
            <div class="bg-gray-50 p-8 rounded-2xl shadow-lg">
                <div class="text-center mb-8">
                    <div class="w-20 h-20 bg-gradient-to-r from-tanzanian-blue to-uae-red rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-cloud-upload-alt text-white text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">Upload Your Media</h3>
                    <p class="text-gray-600">Share photos and videos from community events, cultural celebrations, or business achievements</p>
                </div>

                <form class="space-y-6">
                    <!-- File Upload -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Select Files</label>
                        <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-tanzanian-blue transition-all duration-300 cursor-pointer">
                            <i class="fas fa-cloud-upload-alt text-4xl text-gray-400 mb-4"></i>
                            <p class="text-gray-600 mb-2">Drag and drop files here or click to browse</p>
                            <p class="text-sm text-gray-500">Supported formats: JPG, PNG, MP4, MOV (Max 50MB each)</p>
                            <input type="file" multiple accept="image/*,video/*" class="hidden">
                        </div>
                    </div>

                    <!-- Category -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                        <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tanzanian-blue focus:border-transparent">
                            <option>Select a category</option>
                            <option>Events</option>
                            <option>Cultural</option>
                            <option>Business</option>
                            <option>Community</option>
                            <option>Other</option>
                        </select>
                    </div>

                    <!-- Description -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                        <textarea rows="3" placeholder="Tell us about these photos/videos..."
                                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tanzanian-blue focus:border-transparent"></textarea>
                    </div>

                    <!-- Tags -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Tags</label>
                        <input type="text" placeholder="Add tags (e.g., festival, business, culture)"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tanzanian-blue focus:border-transparent">
                    </div>

                    <!-- Submit -->
                    <button class="w-full bg-gradient-to-r from-tanzanian-blue to-uae-red text-white py-4 px-6 rounded-lg font-semibold hover:from-tanzanian-green hover:to-tanzanian-blue transition-all duration-300">
                        <i class="fas fa-upload mr-2"></i>
                        Upload Media
                    </button>
                </form>

                <div class="mt-6 text-center">
                    <p class="text-sm text-gray-500">
                        By uploading, you agree to our <a href="#" class="text-tanzanian-blue hover:text-tanzanian-green">media sharing guidelines</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

