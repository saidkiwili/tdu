@page
@{
    ViewData["Title"] = "About Us - TDUAE";
}

<!-- Hero Section -->
<section class="bg-gradient-to-br from-tanzanian-green via-tanzanian-blue to-uae-red text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">About Tanzanian Diaspora UAE</h1>
        <p class="text-xl md:text-2xl max-w-4xl mx-auto leading-relaxed opacity-90">
            Building bridges between Tanzania and the UAE through community, culture, and collaboration
        </p>
